<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Pomodoro.NewItemPage" 
    Title="New Project">

    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            
            <Label Text="Project Name" FontSize="Medium" />
            <Entry x:Name="ProjectName" Placeholder="name" FontSize="Small"/>
            
            <Label Text="Category" FontSize="Medium" />
            <Entry x:Name="CategoryName" Placeholder="category" FontSize="Small"/>

            <Label Text="Priority" FontSize="Medium" />
            <Entry x:Name="Priority" Placeholder="Priority" FontSize="Small"/>
            
            <Button
                  x:Name="addButton"
                  Text="Save"
                  TextColor="White"
                  BackgroundColor="#FFA733"
                  BorderRadius="15"
                  BorderColor="White"
                  BorderWidth="2"
                  HeightRequest="40"
                Margin="10,0,10,0"
                  HorizontalOptions="FillAndExpand"
            Clicked="Save_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>